<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sugoilabs.fitko" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Schedule"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Workout"
            android:label="@string/title_activity_workout" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Schedule" />
        </activity>
        <activity
            android:name=".TrainerView"
            android:label="@string/title_activity_workout" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TrainerView" />
        </activity>
        <activity
            android:name=".UserElementModify"
            android:label="@string/title_activity_workout"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UserElementModify" />
        </activity>
        <activity
            android:name=".HealthProfile"
            android:label="@string/title_activity_healthprofile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Schedule" />
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Schedule" />
        </activity>
        <activity
            android:name=".Goals"
            android:label="@string/title_activity_goals" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Schedule" />
        </activity>
        <activity
            android:name=".Diet"
            android:label="@string/title_activity_diet" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Schedule" />
        </activity>
        <activity
            android:name=".PaymentStatus"
            android:label="@string/title_activity_payment_status" >
        </activity>
    </application>

</manifest>
